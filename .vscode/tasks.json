{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++14",
          		"-stdlib=libc++",
          		"minesweeper_engine.cpp", "minesweeper_gameboard.cpp", "tile.cpp",
          		"-o",
          		"minesweeper_engine.out",
          		"--debug"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}